[user]
[core]
	autocrlf = false
	editor = vim
	quotepath = false
[alias]
	br = branch
	unstage = reset HEAD
	logtree = log --graph --date-order --pretty=format:\"%C(yellow)%h %C(red)%ai %C(magenta)%an <%ae>%C(reset)%d%n%C(cyan)%s%n\" -3
	ls = "!f() { git status && echo && git logtree ${1}; }; f"
	st = !$SHELL -c \"git status && echo && git logtree $1\"
[color]
	status = true
	ui = true
[color "diff"]
	meta = cyan
	frag = magenta bold
	old = red bold
	new = green bold
[color "branch"]
	current = green bold
	local = yellow
	remote = cyan
[color "status"]
#	added = yellow
	branch = green bold
	changed = red
	untracked = cyan
[push]
	default = simple
