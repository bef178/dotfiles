#!/bin/bash

if [[ "$BASH_SOURCE" == /* ]]; then
    TOP=$(realpath $(dirname $BASH_SOURCE))
else
    TOP=$(realpath $(pwd)/$(dirname $BASH_SOURCE))
fi

if [[ $OSTYPE == 'darwin'* ]]; then
    source $TOP/setup.d/mac.setup.sh
elif test -d $TOP/setup.d; then
    for i in $(ls $TOP/setup.d/*.sh | grep ".*/[0-9]\{2\}-"); do
        if test -r $i; then
            . $i
        fi
    done
    unset i
fi
