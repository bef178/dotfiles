#!/bin/bash

if [[ "$BASH_SOURCE" == /* ]]; then
    TOP=$(realpath $(dirname $BASH_SOURCE))
else
    TOP=$(realpath $(pwd)/$(dirname $BASH_SOURCE))
fi

if test -d $TOP/setup.d; then
    prefix=""
    if [[ $OSTYPE == 'darwin'* ]]; then
        prefix="mac."
    fi
    for i in $(ls $TOP/setup.d/*.sh | grep ".*/$prefix[0-9]\{2\}-"); do
        if test -r $i; then
            . $i
        fi
    done
    unset i
    unset prefix
fi
